        <activity android:name=".activity.activity.SetActivity" />

        <service
            android:name=".activity.service.AutoUpdateService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.activity.StepActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.activity.music.MusicMvActivity" />
        <activity
            android:name=".activity.activity.mv.MvActivity"
