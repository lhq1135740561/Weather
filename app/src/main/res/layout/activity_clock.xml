<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <com.example.lhq.weather.activity.view.DYLoadingView
        android:id="@+id/dyLoadingview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        app:color1="#FF00EEEE"
        app:color2="#FFFF4040"
        app:radius1="6dp"
        app:radius2="6dp"
        app:gap="0.8dp"
        app:mixColor="#FF000000"
        app:rtlScale="0.7"
        app:ltrScale="1.3"
        app:duration="350"
        app:pauseDuration="80"
        app:scaleStartFraction="0.2"
        app:scaleEndFraction="0.8"/>

    <LinearLayout
        android:id="@+id/clock_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/step_title_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/floatingAb">

            <ImageView
                android:id="@+id/step_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string10dp"
                android:src="@mipmap/set_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string5dp"
                android:layout_toRightOf="@+id/step_back"
                android:text="返回"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/clock_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/clock_anim_title" />

                <include layout="@layout/clock_anim" />

                <include layout="@layout/clock_night_title" />

                <include layout="@layout/clock_night" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


    <!--歌曲播放列表界面-->
    <LinearLayout
        android:id="@+id/musics_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/musics_title_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/music_bg"
            android:visibility="visible">

            <ImageView
                android:id="@+id/musics_back"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string10dp"
                android:src="@mipmap/music_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string5dp"
                android:layout_toRightOf="@+id/musics_back"
                android:text="云音乐热歌榜"
                android:textColor="@color/colorWeather"
                android:textSize="17sp"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/musics_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/musics_dialog"
                android:src="@mipmap/search_music" />

            <ImageView
                android:id="@+id/musics_dialog"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/string15dp"
                android:src="@mipmap/cirview" />
        </RelativeLayout>

        <!--歌曲搜索页面的title-->
        <RelativeLayout
            android:id="@+id/musics_Stitle_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/music_search"
            android:visibility="gone">

            <ImageView
                android:id="@+id/musics_Sback"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string15dp"
                android:src="@mipmap/music_back" />

            <AutoCompleteTextView
                android:id="@+id/musics_Search_songs"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string10dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/musics_Sback"
                android:alpha="100"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:hint="搜索喜欢的歌曲"
                android:paddingLeft="10dp"
                android:textColor="@color/setView"
                android:textCursorDrawable="@null"
                android:textSize="17sp"
                android:typeface="sans" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="@dimen/string5dp"
                android:background="@color/setView" />
        </RelativeLayout>


        <!--我的歌曲界面-->
        <RelativeLayout
            android:id="@+id/myMusic_title_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/music_bg"
            android:visibility="gone">

            <ImageView
                android:id="@+id/mymusic_back"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string10dp"
                android:src="@mipmap/music_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/string5dp"
                android:layout_toRightOf="@+id/mymusic_back"
                android:text="我的歌单"
                android:textColor="@color/colorWeather"
                android:textSize="17sp"
                android:typeface="sans" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/music_listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#01000000" />
            <!--搜索歌曲界面-->
            <ListView
                android:id="@+id/music_Slistview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#01000000"
                android:visibility="gone" />

            <!--我的歌单界面-->
            <ListView
                android:id="@+id/music_Mylistview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#01000000"
                android:visibility="gone" />

            <!--底部控制栏-->
            <RelativeLayout
                android:id="@+id/music_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#01000000">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ten" />

                <TextView
                    android:id="@+id/main_song"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/main_image"
                    android:singleLine="true"
                    android:text="歌名"
                    android:textColor="@color/c_181818"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/main_songer"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_song"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/main_image"
                    android:singleLine="true"
                    android:text="歌手"
                    android:textColor="@color/c_3D3C3C"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/main_menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/menu" />

                <ImageView
                    android:id="@+id/main_next"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/main_menu"
                    android:src="@mipmap/playnext" />

                <ImageView
                    android:id="@+id/main_play"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/main_next"
                    android:src="@mipmap/play" />

                <TextView
                    android:id="@+id/music_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="00:00:00"
                    android:textColor="@color/c_3D3C3C"
                    android:textSize="12sp"
                    android:visibility="invisible" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>