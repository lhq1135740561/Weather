<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_fl_night_front"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="1dp"
        app:cardCornerRadius="@dimen/string10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/front_night_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/music_cut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/cut"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicCut"
                android:layout_below="@+id/music_cut"
                android:textColor="@color/colorWhite"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/string15dp"
                android:typeface="sans"
                android:layout_marginTop="@dimen/string5dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:src="@color/colorBg" />


            <ImageView
                android:id="@+id/music_playing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/play" />

            <TextView
                android:id="@+id/music_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:typeface="sans"
                android:textSize="16sp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:layout_above="@+id/night_tv_rv"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/string5dp"/>

            <RadioGroup
                android:id="@+id/night_tv_rv"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/string10dp">

                <RadioButton
                    android:id="@+id/night_tv_rb"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:background="@drawable/front"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="@string/goodNight"
                    android:typeface="sans"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

            </RadioGroup>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>