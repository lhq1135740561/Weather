<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
    <!--更新时间-->
    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWeather"
        android:textSize="10sp"
        android:text="111"
        android:typeface="sans"
        android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWeather"
            android:textSize="10sp"
            android:text="中国气象天气"
            android:layout_alignParentRight="true"
            android:typeface="sans"
            android:layout_marginBottom="2dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/wea_hourly_view"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:alpha="20"
        android:background="@color/citylayoutBg"
        android:layout_marginBottom="@dimen/string10dp"/>

    <HorizontalScrollView
        android:id="@+id/wea_hourly_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/wea_hourly_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/wea_hourly_point"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:alpha="20"
        android:background="@color/citylayoutBg" />


</LinearLayout>