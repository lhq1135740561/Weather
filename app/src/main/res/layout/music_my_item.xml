<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/music_Myitem_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/c_3D3C3C"
            android:textSize="17sp"
            android:typeface="sans"/>

        <ImageView
            android:id="@+id/music_Myitem_horn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@mipmap/music_horn" />

        <TextView
            android:id="@+id/music_Myitem_song"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:singleLine="true"
            android:text="歌名"
            android:textColor="@color/c_181818"
            android:textSize="14sp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/music_Myitem_songer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_Myitem_song"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="歌手"
            android:textColor="@color/c_3D3C3C"
            android:typeface="sans"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/music_Myitem_point"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/point" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:background="#C9C5C5" />

</LinearLayout>